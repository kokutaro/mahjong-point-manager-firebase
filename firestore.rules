rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rooms Collection Rules
    match /rooms/{roomId} {
      // Helper function to check if user is a player in this room
      function isPlayer() {
        return request.auth != null && request.auth.uid in resource.data.playerIds;
      }
      
      // Helper to check if user is creating a valid room (where they are the host)
      function isValidCreate() {
        return request.auth != null && request.resource.data.hostId == request.auth.uid;
      }

      // Read: Allow if authenticated (Open for now to allow sharing links easier, 
      // or strictly: check if user is in playerIds. For now "Point Manager" is often shared via URL context)
      // Safest restrictive: allow read if request.auth != null;
      allow read: if request.auth != null;

      // Create: Allow if authenticated and setting themselves as host
      allow create: if isValidCreate();

      // Update: Allow if user is one of the players in the room
      // (This means any player can update the score/state, which is expected for this app)
      allow update: if isPlayer();

      // Delete: Only Host can delete (not strictly implemented in UI but good practice)
      allow delete: if request.auth != null && resource.data.hostId == request.auth.uid;
    }
  }
}